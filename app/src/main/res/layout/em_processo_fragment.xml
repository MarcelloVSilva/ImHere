<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tituloProcesso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Checkin Liberado"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/inserirMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:text="Inserir MatrÃ­cula"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/tituloProcesso"
        android:layout_above="@+id/inserirMatricula"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/em_processo_img" />
</RelativeLayout>